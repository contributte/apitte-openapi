{
  "name": "apitte/openapi",
  "description": "Apitte OpenApi library",
  "keywords": [
    "api",
    "rest",
    "json",
    "openapi"
  ],
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/apitte/openapi",
  "authors": [
    {
      "name": "Milan Felix Å ulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">= 7.1",
    "apitte/core": "^0.4.0",
    "tracy/tracy": "~2.4.14 || ~2.5.0",
    "nette/di": "~2.4.12"
  },
  "require-dev": {
    "ninjify/qa": "^0.8.0",
    "ninjify/nunjuck": "^0.2.0"
  },
  "conflict": {
    "nette/utils": "<2.5.2"
  },
  "autoload": {
    "psr-4": {
      "Apitte\\OpenApi\\": "src"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tester": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "coverage": [
      "tester -s -p php --colors 1 -C -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:0.10.1",
      "composer require -d temp/phpstan phpstan/phpstan-nette:0.10",
      "composer require -d temp/phpstan phpstan/phpstan-strict-rules:0.10"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l 7 -c phpstan.neon src"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.5.x-dev"
    }
  }
}
